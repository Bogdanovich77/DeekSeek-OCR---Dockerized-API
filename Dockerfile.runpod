FROM nvidia/cuda:11.8.0-runtime-ubuntu22.04

RUN apt-get update && apt-get install -y \
    python3.10 \
    python3-pip \
    git \
    wget \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

RUN pip3 install --no-cache-dir \
    runpod \
    torch \
    torchvision \
    vllm \
    transformers \
    accelerate \
    fastapi \
    uvicorn \
    python-multipart \
    Pillow \
    PyMuPDF \
    PyYAML \
    requests \
    huggingface_hub

RUN git clone https://github.com/deepseek-ai/DeepSeek-OCR.git DeepSeek-OCR-master

RUN mkdir -p /app/models/deepseek-ai/DeepSeek-OCR && \
    huggingface-cli download deepseek-ai/DeepSeek-OCR \
    --local-dir /app/models/deepseek-ai/DeepSeek-OCR

COPY runpod_handler.py /app/

ENV MODEL_PATH=/app/models/deepseek-ai/DeepSeek-OCR
ENV CUDA_VISIBLE_DEVICES=0

CMD ["python3", "-u", "runpod_handler.py"]
